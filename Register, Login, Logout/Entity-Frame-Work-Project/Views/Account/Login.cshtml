@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="input-area mb-5" style="width: 500px; background-color: #F7B402; padding:20px; border-radius:40px;">
            <div class="text-danger mb-3" asp-validation-summary="All"></div>
            <h3 style="text-align:center;">Login</h3>
            <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="UserNameOfEmail" class="form-label">Email or username</label>
                    <input asp-for="UserNameOfEmail" autocomplete="off" class="form-control">
                    <span class="text-danger" asp-validation-for="UserNameOfEmail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" autocomplete="off" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <button style="width:100%; background-color:black;" type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}

